@{
    ViewData["Title"] = "Shoes Shop";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
@section header {
    <header id="header">
        <div id="header-wrap">
            <nav class="secondary-nav border-bottom">
                <div class="container">
                    <div class="row d-flex align-items-center">
                        <div class="col-md-4 header-contact">
                            <p>
                                Let's talk! <strong>+57 444 11 00 35</strong>
                            </p>
                        </div>
                        <div class="col-md-4 shipping-purchase text-center">
                            <p>Free shipping on a purchase value of $200</p>
                        </div>
                        <div class="col-md-4 col-sm-12 user-items">
                            <ul class="d-flex justify-content-end list-unstyled">
                                <li>
                                    <form asp-controller="Auth" asp-action="Logout" method="post" style="display:inline;">
                                        @Html.AntiForgeryToken() <!-- Include CSRF token -->
                                        <button type="submit" class="icon-button" style="border: none; background: transparent; padding: 0;">
                                            <i class="icon icon-user" style="color: #000; margin-top: -5px;"></i> <!-- Adjust the value as needed -->
                                        </button>
                                    </form>
                                </li>




                                <li>
                                    <a href="cart.html">
                                        <i class="icon icon-shopping-cart"></i>
                                    </a>
                                </li>
                                <li>
                                    <a href="wishlist.html">
                                        <i class="icon icon-heart"></i>
                                    </a>
                                </li>
                                <li class="user-items search-item pe-3">
                                    <a href="#" class="search-button">
                                        <i class="icon icon-search"></i>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </nav>
            <nav class="primary-nav padding-small">
                <div class="container">
                    <div class="row d-flex align-items-center">
                        <div class="col-lg-2 col-md-2">
                            <div class="main-logo">
                                <a href="~/User/index">
                                    <img src="images/logo3.png" alt="logo">
                                </a>
                            </div>
                        </div>
                        <div class="col-lg-10 col-md-10">
                            <div class="navbar">

                                <div id="main-nav" class="stellarnav d-flex justify-content-end right">
                                    <ul class="menu-list">

                                        <li class="menu-item has-sub">
                                            <a href="~/User/Index" class="item-anchor" data-effect="Home">Home</a>

                                        </li>

                                        <li><a href="about.html" class="item-anchor" data-effect="About">About</a></li>

                                        <li class="menu-item has-sub">
                                            <a href="#" class="item-anchor d-flex align-items-center" data-effect="Shop">
                                                Shop <i class="icon icon-chevron-down"></i>
                                            </a>
                                            <ul class="submenu">
                                                <li>
                                                    <a asp-controller="Shop" asp-action="Shoes" class="item-anchor">Shoes Shop</a>
                                                </li>
                                                <li>
                                                    <a asp-controller="Shop" asp-action="Clothes" class="item-anchor">Clothes Shop</a>
                                                </li>
                                                <li>
                                                    <a asp-controller="Shop" asp-action="Handbags" class="item-anchor">Handbags Shop</a>
                                                </li>
                                            </ul>
                                        </li>

                                        <li><a href="contact.html" class="item-anchor" data-effect="Contact">Contact</a></li>

                                    </ul>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </nav>
        </div>
    </header>

}
<button class="button-prev">
    <i class="icon icon-chevron-left"></i>
</button>
<button class="button-next">
    <i class="icon icon-chevron-right"></i>
</button>
<div class="swiper main-swiper">
    <div class="swiper-wrapper">
        <!-- Handbags Slide -->
        <div class="swiper-slide"
             style="background-image: url('images/banner0.jpg');background-repeat: no-repeat;background-size: cover;background-position: center;">
            <div class="banner-content">
                <div class="container">
                    <div class="row">
                        <div class="col-md-6">
                            <h2 class="banner-title">Elegant Handbag</h2>
                            <p>Discover the finest handbags that blend fashion with functionality. Perfect for any occasion.</p>
                            <div class="btn-wrap">
                                <a href="shop.html" class="btn btn-light btn-medium d-flex align-items-center" tabindex="0">
                                    Shop Handbags <i class="icon icon-arrow-io"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Clothes Slide -->
        <div class="swiper-slide"
             style="background-image: url('images/banner4.jpg');background-repeat: no-repeat;background-size: cover;background-position: center;">
            <div class="banner-content">
                <div class="container">
                    <div class="row">
                        <div class="col-md-6">
                            <h2 class="banner-title">Stylish Clothes</h2>
                            <p>Upgrade your wardrobe with trendy outfits. From casual wear to formal styles, we’ve got you covered.</p>
                            <div class="btn-wrap">
                                <a href="shop.html" class="btn btn-light btn-light-arrow btn-medium d-flex align-items-center" tabindex="0">
                                    Shop Clothes <i class="icon icon-arrow-io"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Shoes Slide -->
        <div class="swiper-slide"
             style="background-image: url('images/banner5.jpg');background-repeat: no-repeat;background-size: cover;background-position: center;">
            <div class="banner-content">
                <div class="container">
                    <div class="row">
                        <div class="col-md-6">
                            <h2 class="banner-title">Exclusive Shoe</h2>
                            <p>Step into comfort and style with our premium shoe selection, perfect for every step of your day.</p>
                            <div class="btn-wrap">
                                <a href="shop.html" class="btn btn-light btn-light-arrow btn-medium d-flex align-items-center" tabindex="0">
                                    Shop Shoes <i class="icon icon-arrow-io"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



