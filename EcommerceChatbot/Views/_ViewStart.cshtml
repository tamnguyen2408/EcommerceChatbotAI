    var path = Context.Request.Path.Value;
    if (path.StartsWith("/Admin"))
    {
        Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    }
    else if (path.StartsWith("/Auth"))
    {
        Layout = "~/Views/Shared/_LayoutAuth.cshtml";
    }
