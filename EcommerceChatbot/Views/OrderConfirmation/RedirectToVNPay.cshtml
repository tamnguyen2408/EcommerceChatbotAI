@{
    ViewData["Title"] = "Thanh toán qua VNPay";
    var totalAmount = ViewBag.TotalAmount;
}

<div class="payment-container">
    <h2>Xác nhận Thanh toán qua VNPay</h2>
    <p>Số tiền thanh toán: @totalAmount VNĐ</p>

    <!-- Form để gửi đến VNPay -->
    <form method="post" action="http://sandbox.vnpayment.vn/tryitnow/Home/CreateOrder">
        <input type="hidden" name="amount" value="@((int)(totalAmount * 100))" />
        <button type="submit" class="btn btn-primary">Thanh toán qua VNPay</button>
    </form>

    <div class="mt-4">
        <a href="/" class="btn btn-secondary">Quay lại trang chủ</a>
    </div>
</div>

<style>
    .payment-container {
        padding: 20px;
        max-width: 500px;
        margin: 0 auto;
        text-align: center;
        font-family: Arial, sans-serif;
    }
    .payment-container h2 {
        color: #28a745;
    }
    .btn {
        padding: 10px 20px;
        font-size: 1em;
        border-radius: 5px;
        text-decoration: none;
    }
    .btn-primary {
        background-color: #007bff;
        color: white;
    }
    .btn-secondary {
        background-color: #6c757d;
        color: white;
    }
</style>
