                                    <script>
   

                                        // Render cart items in the payment tab
                                        function renderCartItems() {
                                            const cart = JSON.parse(sessionStorage.getItem('cart')) || [];
                                            const cartItemsContainer = document.getElementById('cartItemsContainer');
                                            const totalAmountElement = document.getElementById('totalAmount');
                                            cartItemsContainer.innerHTML = '';  // Clear previous content

                                            let totalAmount = 0;

                                            if (cart.length === 0) {
                                                cartItemsContainer.innerHTML = '<p>Your cart is empty.</p>';
                                                totalAmountElement.textContent = '0 USD';
                                                return;
                                            }

                                            cart.forEach((item, index) => {
                                                const itemTotal = item.price * item.quantity;
                                                totalAmount += itemTotal;

                                                const itemElement = document.createElement('div');
                                                itemElement.classList.add('cart-item');
                                                itemElement.innerHTML = `
                                                                          <div class="d-flex justify-content-between mb-2 align-items-center cart-item-info">
                                                                              <img src="${item.image}" alt="${item.name}" style="max-width: 50px;">
                                                                              <div class="cart-item-text">
                                                                                  <div class="cart-item-name">${item.name}</div>
                                                                                  <div class="cart-item-quantity">Quantity: <span>${item.quantity}</span></div>
                                                                              </div>
                                                                              <div class="cart-item-price">${itemTotal.toFixed(2)} USD</div>
                                                                          </div>
                                                                          <div class="cart-item-actions">
                                                                              <button class="btn btn-sm btn-outline-secondary" onclick="decreaseQuantity(${index})">-</button>
                                                                              <button class="btn btn-sm btn-outline-secondary" onclick="increaseQuantity(${index})">+</button>
                                                                              <button class="btn btn-sm remove-btn" onclick="removeItem(${index})">x</button>
                                                                          </div>
                                                                          <hr />
                                                                      `;
                                                cartItemsContainer.appendChild(itemElement);
                                            });

                                            totalAmountElement.textContent = `${totalAmount.toFixed(2)} USD`;

                                        }

                                        // Increase quantity of a cart item
                                        function increaseQuantity(index) {
                                            const cart = JSON.parse(sessionStorage.getItem('cart')) || [];
                                            cart[index].quantity += 1;
                                            sessionStorage.setItem('cart', JSON.stringify(cart));
                                            renderCartItems();
                                            updateCartCount(); // Cập nhật số lượng
                                        }

                                        function decreaseQuantity(index) {
                                            const cart = JSON.parse(sessionStorage.getItem('cart')) || [];
                                            if (cart[index].quantity > 1) {
                                                cart[index].quantity -= 1;
                                            } else {
                                                cart.splice(index, 1); // Xóa sản phẩm nếu số lượng bằng 0
                                            }
                                            sessionStorage.setItem('cart', JSON.stringify(cart));
                                            renderCartItems();
                                            updateCartCount(); // Cập nhật số lượng
                                        }

                                        function removeItem(index) {
                                            const cart = JSON.parse(sessionStorage.getItem('cart')) || [];
                                            cart.splice(index, 1); // Xóa sản phẩm
                                            sessionStorage.setItem('cart', JSON.stringify(cart));
                                            renderCartItems();
                                            updateCartCount(); // Cập nhật số lượng
                                        }


                                        // Update cart count on the cart icon
                                        // Update cart count on the cart icon
                                        function updateCartCount() {
                                            const cart = JSON.parse(sessionStorage.getItem('cart')) || [];
                                            const totalItems = cart.reduce((total, item) => total + item.quantity, 0);
                                            const cartCountElement = document.getElementById('cartCount');

                                            if (totalItems > 0) {
                                                cartCountElement.textContent = totalItems;
                                                cartCountElement.style.display = 'inline'; // Hiện số lượng
                                            } else {
                                                cartCountElement.textContent = '';
                                                cartCountElement.style.display = 'none'; // Ẩn khi không có sản phẩm
                                            }
                                        }

                                        // Gọi hàm này sau mỗi thay đổi trong giỏ hàng
                                        updateCartCount();


                                        // Toggle payment tab display on cart icon click
                                        document.getElementById('cartIcon').addEventListener('click', function () {
                                            const paymentTab = document.getElementById('paymentTab');

                                            if (paymentTab.style.display === 'none' || paymentTab.style.display === '') {
                                                paymentTab.style.display = 'block';
                                                renderCartItems();  // Update cart items in the tab
                                            } else {
                                                paymentTab.style.display = 'none';
                                            }
                                        });

                                        // Proceed to Checkout
                                        function proceedToCheckout() {
                                            const cart = JSON.parse(sessionStorage.getItem('cart')) || [];
                                            if (cart.length === 0) {
                                                alert('Your cart is empty!');
                                                return;
                                            }

                                            // Lưu giỏ hàng vào sessionStorage
                                            sessionStorage.setItem('cart', JSON.stringify(cart));

                                            // Chuyển hướng tới trang checkout.cshtml
                                            window.location.href = "/Cart/Checkout";  // Điều chỉnh URL này theo đường dẫn chính xác đến trang checkout của bạn
                                            document.addEventListener('DOMContentLoaded', updateCartCount);

                                        }

                                    </script>






