@model EcommerceChatbot.Models.Product

@{
    ViewData["Title"] = "Product Details";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<div class="container mt-5">
    <div class="row align-items-center">
        <div class="col-md-5">
            <div class="image-holder position-relative">
                <img src="@Model.ImageUrl" alt="@Model.ProductName" class="img-fluid rounded shadow" style="max-width: 100%; height: auto; object-fit: contain;">
                @* <button class="btn btn-sm btn-light position-absolute top-0 end-0 m-2 wishlist-btn">
                <i class="bi bi-heart"></i>
                </button> *@
            </div>
        </div>
        <div class="col-md-7">
            <h2 class="fw-bold text-uppercase">@Model.ProductName</h2>
            <p class="text-primary fw-bold fs-4">@Model.Price.ToString("C")</p>
            <p class="text-muted">@Model.Description</p>

            <div class="d-flex align-items-center mt-3">
                <label for="quantity" class="me-2">Quantity:</label>
                <div class="input-group w-50">
                    <input type="number" id="quantity" value="1" min="1" class="form-control text-center" />
                </div>
            </div>

            <div class="d-grid gap-2 mt-3">
                <button type="button" class="btn btn-primary d-flex align-items-center justify-content-center">
                    <i class="bi bi-cart-plus me-2"></i> Add to Cart
                </button>
                <button type="button" class="btn btn-outline-secondary d-flex align-items-center justify-content-center">
                    <i class="bi bi-eye-fill me-2"></i> Quick View
                </button>
            </div>

            <div class="mt-4">
                <h5 class="fw-bold">Customer Reviews</h5>
                <div class="mb-2">
                    <span class="text-warning">⭐⭐⭐⭐☆</span> <!-- Placeholder for rating -->
                    <span class="text-muted">(4.5/5 from 120 reviews)</span>
                </div>
                <p class="text-muted">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec vel mauris quam.</p>
            </div>
        </div>
    </div>
</div>

<style>
    .image-holder {
        border: 1px solid #e0e0e0;
        border-radius: 8px;
        overflow: hidden;
        position: relative;
        height: 400px; /* Set a fixed height */
        display: flex; /* Use flexbox for better alignment */
        justify-content: center; /* Center the image */
        align-items: center; /* Center the image */
    }

        .image-holder img {
            max-width: 100%; /* Limit the width */
            max-height: 100%; /* Limit the height */
            height: auto; /* Maintain aspect ratio */
            object-fit: contain; /* Maintain aspect ratio within the container */
            transition: transform 0.3s ease;
        }

        .image-holder:hover img {
            transform: scale(1.05); /* Scale effect on hover */
        }

    .btn-light {
        background-color: rgba(255, 255, 255, 0.7);
    }

    .input-group {
        display: flex; /* Flexbox for better layout */
        align-items: center; /* Center items vertically */
    }

    #quantity {
        width: 60px; /* Fixed width for input */
        text-align: center; /* Center the text in input */
    }
</style>

