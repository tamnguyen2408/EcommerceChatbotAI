@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

@model List<EcommerceChatbot.Models.Product>
@section header {
    <header id="header">
        <div id="header-wrap">
            <nav class="secondary-nav border-bottom">
                <div class="container">
                    <div class="row d-flex align-items-center">
                        <div class="col-md-4 header-contact">
                            <p>
                                Let's talk! <strong>+57 444 11 00 35</strong>
                            </p>
                        </div>
                        <div class="col-md-4 shipping-purchase text-center">
                            <p>Free shipping on a purchase value of $200</p>
                        </div>
                        <div class="col-md-4 col-sm-12 user-items">
                            <ul class="d-flex justify-content-end list-unstyled">
                                <li>
                                    <a href="~/Auth/Login">
                                        <i class="icon icon-user"></i>
                                    </a>
                                </li>




                                <li>
                                    <a href="cart.html">
                                        <i class="icon icon-shopping-cart"></i>
                                    </a>
                                </li>
                                <li>
                                    <a href="wishlist.html">
                                        <i class="icon icon-heart"></i>
                                    </a>
                                </li>
                                <li class="user-items search-item pe-3">
                                    <a href="#" class="search-button">
                                        <i class="icon icon-search"></i>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </nav>
            <nav class="primary-nav padding-small">
                <div class="container">
                    <div class="row d-flex align-items-center">
                        <div class="col-lg-2 col-md-2">
                            <div class="main-logo">
                                <a href="~/User/index">
                                    <img src="images/logo3.png" alt="logo">
                                </a>
                            </div>
                        </div>
                        <div class="col-lg-10 col-md-10">
                            <div class="navbar">

                                <div id="main-nav" class="stellarnav d-flex justify-content-end right">
                                    <ul class="menu-list">

                                        <li class="menu-item has-sub">
                                            <a href="~/User/Index" class="item-anchor" data-effect="Home">Home</a>

                                        </li>

                                        <li><a href="about.html" class="item-anchor" data-effect="About">About</a></li>

                                        <li class="menu-item has-sub">
                                            <a href="#" class="item-anchor d-flex align-items-center" data-effect="Shop">
                                                Shop <i class="icon icon-chevron-down"></i>
                                            </a>
                                            <ul class="submenu">
                                                <li>
                                                    <a asp-controller="Shop" asp-action="Shoes" class="item-anchor">Shoes Shop</a>
                                                </li>
                                                <li>
                                                    <a asp-controller="Shop" asp-action="Clothes" class="item-anchor">Clothes Shop</a>
                                                </li>
                                                <li>
                                                    <a asp-controller="Shop" asp-action="Handbags" class="item-anchor">Handbags Shop</a>
                                                </li>
                                            </ul>
                                        </li>

                                        <li><a href="contact.html" class="item-anchor" data-effect="Contact">Contact</a></li>

                                    </ul>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </nav>
        </div>
    </header>

}
<div class="container">
    <div class="section-header d-flex flex-wrap align-items-center justify-content-between">
        <h2 class="section-title">Featured Products</h2>
        <div class="btn-wrap">
            <a href="shop.html" class="d-flex align-items-center">View all products <i class="icon icon icon-arrow-io"></i></a>
        </div>
    </div>
    <div class="swiper product-swiper overflow-hidden">
        <div class="swiper-wrapper">
            @foreach (var product in Model)
            {
                <div class="swiper-slide">
                    <div class="product-item">
                        <div class="image-holder">
                            <img src="@product.ImageUrl" alt="@product.ProductName" class="product-image">
                        </div>
                        <div class="product-detail">
                            <h3 class="product-title">
                                <a href="single-product.html">@product.ProductName</a>
                            </h3>
                            <span class="item-price text-primary">@product.Price.ToString("C")</span>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="swiper-pagination"></div>
</div>