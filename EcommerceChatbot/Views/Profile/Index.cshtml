@model EcommerceChatbot.Models.User
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<!-- Link Google Fonts để thay đổi phông chữ -->
<link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500&display=swap" rel="stylesheet">

<style>
    /* Đặt phông chữ cho toàn bộ trang */
    body {
        font-family: 'Roboto', sans-serif;
    }

    /* CSS chỉ áp dụng trong phạm vi trang Profile */
    .user-profile-container {
        max-width: 800px;
        margin: auto;
        background-color: #f8f9fa;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease-in-out, box-shadow 0.3s ease, border-radius 0.3s ease;
    }

        .user-profile-container:hover {
            transform: scale(1.02);
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.2);
            border-radius: 12px;
        }

        .user-profile-container h2 {
            font-size: 28px;
            font-weight: 500;
            text-align: center;
            margin-bottom: 30px;
            color: #007bff;
            transition: color 0.3s ease, transform 0.3s ease;
        }

            .user-profile-container h2:hover {
                color: #0056b3;
                transform: translateY(-5px);
            }

        .user-profile-container .table {
            width: 100%;
            background-color: white;
            border-radius: 8px;
            overflow: hidden;
            border-collapse: separate;
            border-spacing: 0 10px;
        }

            .user-profile-container .table th {
                background-color: #007bff;
                color: white;
                text-align: left;
                padding: 15px 20px;
                font-size: 16px;
                font-weight: 500;
                transition: background-color 0.3s ease, transform 0.3s ease;
            }

                .user-profile-container .table th:hover {
                    background-color: #0056b3;
                    transform: translateY(-2px);
                }

            .user-profile-container .table td {
                padding: 15px 20px;
                font-size: 16px;
                background-color: #f9f9f9;
                transition: background-color 0.3s ease;
            }

                .user-profile-container .table td:hover {
                    background-color: #e9ecef;
                }

        .user-profile-container .table-bordered td, .user-profile-container .table-bordered th {
            border: 1px solid #dee2e6;
        }

        .user-profile-container .btn {
            padding: 12px 24px;
            font-size: 16px;
            border-radius: 6px;
            transition: all 0.3s ease;
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
        }

        .user-profile-container .btn-primary {
            background-color: #007bff;
            border: none;
            color: white;
        }

            .user-profile-container .btn-primary:hover {
                background-color: #0056b3;
                box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
                transform: translateY(-3px);
            }

        .user-profile-container .btn-secondary {
            background-color: #6c757d;
            border: none;
            color: white;
        }

            .user-profile-container .btn-secondary:hover {
                background-color: #565e64;
                box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
                transform: translateY(-3px);
            }

        .user-profile-container .ms-2 {
            margin-left: 10px;
        }

        .user-profile-container .mt-3 {
            margin-top: 30px;
        }
</style>

<div class="user-profile-container mt-4">
    <h2 class="text-primary">User Profile</h2>
    <table class="table table-bordered mt-3">
        <tbody>
            <tr>
                <th>UserName</th>
                <td>@Model.UserName</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>@Model.Email</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>@Model.Phone</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>@(new string('*', Model.Password.Length))</td> <!-- Không nên hiển thị mật khẩu thực tế -->
            </tr>
        </tbody>
    </table>

    <div class="mt-3">
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary ms-2">
            Back Home
        </a>
    </div>
</div>
