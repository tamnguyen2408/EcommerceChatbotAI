@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "User Management";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@model List<EcommerceChatbot.Models.User>

<div class="container mt-5">
    <h2 class="text-center mb-4">User Management</h2>
    <div class="text-end mb-3">
        <a class="btn btn-primary" asp-area="Admin" asp-controller="UserManagement" asp-action="Add">
            <i class="bi bi-plus-circle"></i> Create New User
        </a>
    </div>
    <table class="table table-striped table-bordered align-middle text-center">
        <thead class="table-dark">
            <tr>
                <th>UserID</th>
                <th>UserName</th>
                <th>Email</th>
                <th>Password</th>
                <th>Phone</th>
                <th>Role</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserId</td>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>@user.Password</td>
                    <td>@user.Phone</td>
                    <td>@user.Role.ToLower()</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@user.UserId"
                           class="btn btn-warning btn-sm me-2">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <form asp-action="Delete" asp-route-id="@user.UserId"
                              method="post" style="display:inline;">
                            <button type="submit" class="btn btn-danger btn-sm"
                                    onclick="return confirm('Are you sure you want to delete this user?');">
                                <i class="bi bi-trash"></i> Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
